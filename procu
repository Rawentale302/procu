  <script>
    const yesBtn = document.getElementById('yesBtn');
    const noBtn = document.getElementById('noBtn');
    const firstScreen = document.getElementById('firstScreen');
    const secondScreen = document.getElementById('secondScreen');
    const music = document.getElementById('bgMusic');
    const muteBtn = document.getElementById('muteBtn');

    // HayÄ±r butonu kaÃ§ar
    noBtn.addEventListener('mouseenter', () => {
      const maxX = 200;
      const maxY = 100;
      const newX = Math.floor(Math.random() * maxX);
      const newY = Math.floor(Math.random() * maxY);
      noBtn.style.left = `${newX}px`;
      noBtn.style.top = `${newY}px`;
    });

    // Sessiz butonu
    muteBtn.addEventListener('click', () => {
      music.muted = !music.muted;
      muteBtn.textContent = music.muted ? 'ðŸ”Š Ses AÃ§Ä±k' : 'ðŸ”‡ Sessiz';
    });

    // Evet tÄ±klanÄ±nca ekran geÃ§iÅŸi ve mÃ¼zik
    yesBtn.addEventListener('click', () => {
      music.play().catch(() => console.log("MÃ¼zik baÅŸlamadÄ±."));
      firstScreen.classList.remove('active');
      secondScreen.classList.add('active');
      document.body.style.background = 'linear-gradient(to right, #d46599, #fadcc4)';
      document.body.style.textShadow = 'none';
    });
  </script>

